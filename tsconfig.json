/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
	"$schema": "https://json.schemastore.org/tsconfig.json",
	"extends": "./tsconfig.base.json",
	"compilerOptions": {
		"outDir": "./out-tsc/app",
		"types": ["node"],
		"baseUrl": ".",
		"paths": {
			"~/*": ["./src/*"],

			"@spartan-ng/ui-separator-helm": [
				"./src/ui/ui-separator-helm/src/index.ts"
			],
			"@spartan-ng/ui-avatar-helm": ["./src/ui/ui-avatar-helm/src/index.ts"],
			"@spartan-ng/ui-button-helm": ["./src/ui/ui-button-helm/src/index.ts"],
			"@spartan-ng/ui-dialog-helm": ["./src/ui/ui-dialog-helm/src/index.ts"],
			"@spartan-ng/ui-tooltip-helm": ["./src/ui/ui-tooltip-helm/src/index.ts"],
			"@spartan-ng/ui-badge-helm": ["./src/ui/ui-badge-helm/src/index.ts"],
			"@spartan-ng/ui-card-helm": ["./src/ui/ui-card-helm/src/index.ts"],
			"@spartan-ng/ui-input-helm": ["./src/ui/ui-input-helm/src/index.ts"],
			"@spartan-ng/ui-label-helm": ["./src/ui/ui-label-helm/src/index.ts"],
			"@spartan-ng/ui-tabs-helm": ["./src/ui/ui-tabs-helm/src/index.ts"],
			"@spartan-ng/ui-table-helm": ["./src/ui/ui-table-helm/src/index.ts"],
			"@spartan-ng/ui-menu-helm": ["./src/ui/ui-menu-helm/src/index.ts"],
			"@spartan-ng/ui-icon-helm": ["./src/ui/ui-icon-helm/src/index.ts"],
			"@spartan-ng/ui-checkbox-helm": ["./src/ui/ui-checkbox-helm/src/index.ts"]
		}
	},
	"files": ["src/main.ts"],
	"include": ["src/**/*.d.ts", "src/app/**/*.ts", "src/environments/*.ts"]
}
